
@helper CSS(string cssFile, string media = "screen")
    {
    <link rel="stylesheet" href="/Public/stylesheets/@cssFile" type="text/css" media="@media" /> 
}
@helper Image(string imageFile)
    {
    <img src = "/Public/images/@imageFile" />
}
@helper ImageLink(string link, string imageFile)
    {
    <a href="@link">
        @Assets.Image(imageFile)
    </a>
}
@helper Templates()
    {
    <script type = "text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
}
@helper Backbone()
    {
    @Assets.Script("underscore-min.js")
    @Assets.Script("backbone-min.js")
}
@helper Script(string scriptFile)
    {
    <script type="text/javascript" src="/Public/javascripts/@scriptFile"></script>
}
@helper jQuery(bool useGoogle = true)
    {
        if (useGoogle)
        {
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js" type="text/javascript"></script>
        <script type = "text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
        }
        else
        {
         @Assets.localScripts()
        }
      
    }    
@helper localScripts()
    {
     @Assets.Script("jquery-1.5.1.min.js")
    @Assets.Script("jquery.cycle.all.js")
    @Assets.Script("jquery.validate.min.js")
    @Assets.Script("jquery.validate.unobtrusive.min.js")  
    @Assets.Script("jquery-ui-1.8.11.min.js")
    @Assets.Script("underscore-min.js")
    @Assets.Script("backbone-min.js")
    @Assets.Script("jquery.tmpl.min.js")
   
}

@helper jgrid(string templateName)
{
   
    <link rel="stylesheet" href="/Public/jGrid/css/@templateName/jquery-ui-1.8.16.custom.css" type="text/css" /> 
    <link rel="stylesheet" href="/Public/jGrid/css/ui.jqgrid.css" type="text/css"  /> 

    <script type="text/javascript" src="/Public/jGrid/js/i18n/grid.locale-en.js"></script>
    <script type="text/javascript" src="/Public/jGrid/js/jquery.jqGrid.min.js"></script>
  
}
